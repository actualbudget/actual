{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    // Using ES2021 because that's the newest version where
    // the latest Node 16.x release supports all of the features
    "target": "ES2021",
    "module": "CommonJS",
    "moduleResolution": "node10",
    "noEmit": false,
    "declaration": true,
    "outDir": "dist",
    "declarationDir": "@types"
  },
  "include": ["."],
  "exclude": [
    "**/node_modules/*",
    "dist",
    "@types",
    "*.test.ts",
    "vite.config.ts",
    "vitest.config.ts",
    "vitest.setup.ts"
  ]
}
